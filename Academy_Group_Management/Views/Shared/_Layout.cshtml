 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Academy_Group_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Academy_Group_Management.styles.css" asp-append-version="true" />
</head>

<style>
    nav {
        scale: 1.1;
    }

        nav:hover {
            transition: 0.3s ease;
            border-radius: 7px;
            color: #151515 !important;
            font-weight: 500;
        }

    /* Navigation Link Styling */
    #nav-home,
    #nav-instructor,
    #nav-student,
    #nav-group {
        position: relative;
        font-size: 27px;
        font-weight: 500;
        font-family: 'Cormorant Garamond', serif;
        text-decoration: none;
        color: #151515;
        transition: color 0.3s ease;
    }

        /* Underline Effect */
        #nav-home::after,
        #nav-instructor::after,
        #nav-student::after,
        #nav-group::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: -4px;
            width: 90%;
            height: 3px;
            background: white;
            border-radius: 5px;
            transform: scaleX(0);
            transform-origin: right;
            transition: transform 0.3s ease;
        }

        /* Hover Effect */
        #nav-home:hover,
        #nav-instructor:hover,
        #nav-student:hover,
        #nav-group:hover {
            color: lightblue;
          
        }

            #nav-home:hover::after,
            #nav-instructor:hover::after,
            #nav-student:hover::after,
            #nav-group:hover::after {
                transform: scaleX(1);
                transform-origin: left;
            }
  
    hr{
        width: 70%;
        margin-left: 15%;
        opacity: 0.5;
        border: 1px solid black;
        border-radius: 100%;
        border-image: linear-gradient(to right, transparent, black, transparent) 1 stretch;
        
    }
   
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary border-bottom box-shadow mb-3" style="border-radius: 50px 50px 50px 50px; margin: 20px 80px 40px 80px;  padding-left:20px; width:70%; height:30%; margin-left:16%;"
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" >AGM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" id="nav-home" style="margin-left:257px">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Instructor" asp-action="Index" id="nav-instructor">Instructor</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index"id="nav-student">Student</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Group" asp-action="Index"id="nav-group">Group</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
