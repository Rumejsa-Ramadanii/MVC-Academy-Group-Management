@{
    ViewData["Title"] = "Home Page";
}
<style>
   
    body {
        background-color: #f0f2f5;
        font-family: Arial, sans-serif;
    }

   
    h1 {
        color: wheat;
        text-align: center;
        border-radius: 20px;
        padding: 10px 0;
        color: white;
        margin-top: 1em;
        margin-bottom: 2rem;
    }

 
    .card {
        width: 18rem;
        background-color: white;
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

      
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 0 20px rgba(0, 123, 255, 0.5);
            background: linear-gradient(135deg, #007bff, #00c3ff);
            color: white;
        }

     
        .card i {
            font-size: 125px;
            color: #007bff;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .card:hover i {
            transform: scale(1.2);
            color: white;
        }

 
    .card-text {
        color: #333;
        transition: color 0.3s ease;
    }

 
    .card:hover .card-text {
        color: white;
    }

   
    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: all 0.3s ease;
    }

   
    .card:hover .btn-primary {
        background-color: white;
        color: #007bff;
        box-shadow: 0 0 10px white;
    }

    .carousel-item img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 10px;
    }

    
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        margin-top: 2rem;
    }

    
    .TheHr {
        opacity: 1;
        border: 0.5px solid black;
        border-radius: 100%;
        border-image: linear-gradient(to right, transparent, black, transparent) 1 stretch;
        color: transparent;
        margin-bottom: 1.5rem;
    }

    #carouselExample {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }
    .carousel-item {
        height: 500px;
    }


        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
            display: block;
        }
</style>

<h1>Academy Group Management</h1>
<hr / style="margin-bottom:2em">

<!-- Carousel Section -->
<div class="d-flex justify-content-center">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://img.freepik.com/free-vector/business-team-discussing-ideas-startup_74855-4380.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img src="https://img.freepik.com/free-vector/tiny-business-people-generating-ideas-holding-gears-big-light-bulb-idea-management-alternative-thinking-best-solution-choice-concept-illustration_335657-2555.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img src="https://img.freepik.com/premium-vector/business-people-meeting-office_7547-667.jpg" alt="Third slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Card Section -->
<div class="card-container " style="display:flex; justify-content:center; justify-content:space-around;">
    <!-- Instructor Card -->
    <div class="card text-center p-4 mt-4">
        <i class="fa-solid fa-chalkboard-user"></i>
        <div class="card-body">
            <h3 class="card-title">Instructor</h3>
            <hr class="TheHr">
            <p class="card-text">Here you can see instructors you need! Click below for more info.</p>
            <a asp-controller="Instructor" asp-action="Index" class="btn btn-primary">Click here!</a>
        </div>
    </div>

    <!-- Students Card -->
    <div class="card text-center p-4 mt-4">
        <i class="fa-solid fa-user-graduate"></i>
        <div class="card-body">
            <h3 class="card-title">Students</h3>
            <hr class="TheHr">
            <p class="card-text">Manage student information and track progress here.</p>
            <a href="Student#index" class="btn btn-primary mt-4">Click here!</a>
        </div>
    </div>

    <!-- Groups Card -->
    <div class="card text-center p-4 mt-4">
        <i class="fa-solid fa-user-group"></i>
        <div class="card-body">
            <h3 class="card-title">Groups</h3>
            <hr class="TheHr">
            <p class="card-text">Organize and manage different groups effectively.</p>
            <a href="Group#index" class="btn btn-primary mt-4">Click here!</a>
        </div>
    </div>
</div>
